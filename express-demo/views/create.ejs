<%- include('header') %>

<div class="post-content">
<div class="ui grid">
  <div class="four wide column">
    <a href="/posts?author=<%= user._id %>" class="avatar avatar-link"
      data-title="<%= user.name %> | <%= ({m: '男', f: '女', 'x': '保密'})[user.gender] %>"
      data-content="<%= user.bio %>">
      <img class="avatar" src="/img/<%= user.avatar %>" alt="">
    </a>
  </div>
  <div class="eight wide column">
    <form action="" class="ui form segment" method="post">
      <div class="field required">
        <label for="">标题</label>
        <input type="text" name="title">
      </div>
      <div class="field required">
        <label for="">内容</label>
        <textarea name="content" id=""rows="15"></textarea>
      </div>
      <input type="submit" class="ui button" value="发布">
    </form>
  </div>
</div>
</div>

<%- include('footer') %>